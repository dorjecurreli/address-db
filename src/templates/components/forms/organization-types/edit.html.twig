<form action="{{ path('organization_types_edit', {id: organization_type.id}) }}" method="post" enctype="multipart/form-data">

    {#    {{ csrf_field() }}#}

    <!-- Name -->
    <div class="row justify-content-md-center mt-5">
        <div class="col-12">
            <div class="form-group">
                <label for="first_name">{% trans from 'dashboard' %}organization_types.field.name{% endtrans %}</label>
                <input type="text" class="form-control" placeholder="{{ organization_type.name }}" name="first_name" value="{{ organization_type.name }}" autocapitalize="words" >
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-custom" name="submit">{% trans from 'global' %}global.save{% endtrans %}</button>
            <button type="reset" class="btn btn-secondary btn-custom" onclick="window.location.href = '{{ path('organization_types_index')}}'">{% trans from 'global' %}global.cancel{% endtrans %}</button>
        </div>
    </div>


</form>