<form action="{{ path('persons_attach_store') }}" method="post" enctype="multipart/form-data">

{#    {{ csrf_field() }}#}


    <div class="row justify-content-md-center mt-5">

        <div class="col-12">
            <div class="form-group">
                <label for="person_id">* Select Person</label>
                <select class="form-control" name="person_id" required>
                    {% for person in persons %}
                        <option value="{{ person.id }}">{{ person.firstName ~ ' ' ~ person.lastName }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="col-12">
            <div class="form-group">
                <label for="label_id">* Select Label</label>
                <select class="form-control" name="label_id" required>
                    {% for label in labels %}
                        <option value="{{ label.id }}">{{ label.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>


        <!-- Is Blacklisted -->
        <div class="col-12">
            <div class="form-group">
                <label for="is_blacklisted">{% trans from 'dashboard' %}person_label.field.is_blacklisted{% endtrans %}</label>
                <select class="form-control" name="is_blacklisted" required>
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
        </div>


        <!-- Is VIP -->
        <div class="col-12">
            <div class="form-group">
                <label for="is_vip">{% trans from 'dashboard' %}person_label.field.is_vip{% endtrans %}</label>
                <select class="form-control" name="is_vip" required>
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
        </div>


        <!-- Is Contactable -->
        <div class="col-12">
            <div class="form-group">
                <label for="is_contactable">{% trans from 'dashboard' %}person_label.field.is_contactable{% endtrans %}</label>
                <select class="form-control" name="is_contactable" required>
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </select>
            </div>
        </div>

    </div>


    <div class="row" style="margin-top: 35px;">
        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-custom" name="submit">{% trans from 'global' %}global.save{% endtrans %}</button>
            <button type="reset" class="btn btn-secondary btn-custom" onclick="window.location.href = '{{ path('persons_index')}}'">{% trans from 'global' %}global.cancel{% endtrans %}</button>
        </div>
    </div>

</form>