<form action="{{ path('users_edit', {id: user.id}) }}" method="post" enctype="multipart/form-data">

    {#    {{ csrf_field() }}#}



    <!-- Email -->
    <div class="row justify-content-md-center mt-5">

        <div class="col-12">
            <div class="form-group">
                <label for="user_email">* {% trans from 'dashboard' %}users.field.email{% endtrans %}</label>
                <input type="text" class="form-control" placeholder="{{ user.email }}" name="user_email" value="{{ user.email }}" autocapitalize="words" required>
            </div>
        </div>

    </div>


    <!-- Roles -->
    <div class="form-group">
        <label for="user_roles">* {% trans from 'dashboard' %}users.field.roles{% endtrans %}</label>
        <select class="form-control" name="user_roles[]" multiple required>
            <option value="{{ user.roles[0] }}">-- {{ user.roles[0] }} --</option>


                        {% for role in user_roles %}

                            <option>{{ role }}</option>

                        {% endfor %}

        </select>
    </div>


    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-custom" name="submit">{% trans from 'global' %}global.edit{% endtrans %}</button>
            <button type="reset" class="btn btn-secondary btn-custom" onclick="window.location.href = '{{ path('users_index')}}'">{% trans from 'global' %}global.cancel{% endtrans %}</button>
        </div>
    </div>

</form>