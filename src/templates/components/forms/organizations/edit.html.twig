<form action="{{ path('organizations_edit', {'id': organization.id}) }}" method="post" enctype="multipart/form-data">

    {#    {{ csrf_field() }}#}
    <!-- Name -->
    <div class="row justify-content-md-center mt-5">

        <div class="col-12">
            <div class="form-group">
                <label for="organization_name">* {% trans from 'dashboard' %}organizations.field.name{% endtrans %}</label>
                <input type="text" class="form-control" placeholder="{{ organization.name }}" name="organization_name" value="{{ organization.name }}" autocapitalize="words" required>
            </div>
        </div>

    </div>

    {# Contact Details #}
    {% include 'components/forms/contact-details/edit.html.twig' with {'contact_detail': organization.contactDetail } %}

    {# Address #}
    {% include 'components/forms/addresses/edit.html.twig' with {'address': organization.address, 'countries': countries } %}





    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-custom" name="submit">{% trans from 'global' %}global.edit{% endtrans %}</button>
            <button type="reset" class="btn btn-secondary btn-custom" onclick="window.location.href = '{{ path('organizations_index')}}">{% trans from 'global' %}global.cancel{% endtrans %}</button>
        </div>

    </div>

</form>










